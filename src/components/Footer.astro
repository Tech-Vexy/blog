<style>
	footer {
		background: linear-gradient(135deg, #1f2937 0%, #111827 100%);
		color: white;
		padding: 4rem 0 2rem;
		margin-top: 4rem;
	}
	
	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}
	
	.footer-content {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
		margin-bottom: 2rem;
	}
	
	.footer-section h3 {
		background: linear-gradient(135deg, #667eea, #764ba2);
		background-clip: text;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		font-size: 1.5rem;
		font-weight: 900;
		margin-bottom: 1rem;
		letter-spacing: -0.02em;
	}
	
	.footer-section h4 {
		color: #e5e7eb;
		font-size: 1.2rem;
		font-weight: 600;
		margin-bottom: 1rem;
	}
	
	.footer-section p {
		color: #9ca3af;
		line-height: 1.6;
		margin-bottom: 1rem;
	}
	
	.footer-section ul {
		list-style: none;
		padding: 0;
	}
	
	.footer-section li {
		margin-bottom: 0.5rem;
	}
	
	.footer-section a {
		color: #9ca3af;
		text-decoration: none;
		transition: color 0.3s ease;
	}
	
	.footer-section a:hover {
		color: #667eea;
	}
	
	.social-links {
		display: flex;
		gap: 1rem;
	}
	
	.social-links a {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 40px;
		height: 40px;
		border-radius: 50%;
		background: rgba(102, 126, 234, 0.1);
		transition: all 0.3s ease;
	}
	
	.social-links a:hover {
		background: rgba(102, 126, 234, 0.2);
		transform: translateY(-2px);
	}
	
	.footer-bottom {
		border-top: 1px solid #374151;
		padding-top: 2rem;
		text-align: center;
	}
	
	.footer-bottom p {
		color: #9ca3af;
		margin: 0;
	}
	
	@media (max-width: 768px) {
		.container {
			padding: 0 1rem;
		}
		
		.footer-content {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}
	}
</style>
