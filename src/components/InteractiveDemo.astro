---
// Interactive demo component for MDX posts
---

<div class="interactive-demo">
  <h3>Interactive Demo Component</h3>
  <p>This component is imported and used within an MDX file!</p>
  <button class="demo-button" id="demoBtn">Click me!</button>
  <p class="demo-result" id="demoResult"></p>
</div>

<style>
  .interactive-demo {
    background: rgba(139, 92, 246, 0.1);
    border: 1px solid rgba(139, 92, 246, 0.3);
    border-radius: 0.5rem;
    padding: 1.5rem;
    margin: 2rem 0;
  }

  .demo-button {
    background: linear-gradient(135deg, #8b5cf6, #ec4899);
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    cursor: pointer;
    font-weight: 600;
    transition: transform 0.2s ease;
  }

  .demo-button:hover {
    transform: scale(1.05);
  }

  .demo-result {
    margin-top: 1rem;
    font-weight: 600;
    color: #8b5cf6;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const btn = document.getElementById('demoBtn');
    const result = document.getElementById('demoResult');
    let clickCount = 0;

    btn?.addEventListener('click', () => {
      clickCount++;
      if (result) {
        result.textContent = `Button clicked ${clickCount} time${clickCount !== 1 ? 's' : ''}! ðŸŽ‰`;
      }
    });
  });
</script>